<!doctype html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Twins Weekly Run Board</title>
    <base href="/{{ siteRoot }}"/>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" sizes="32x32" href="./images/app-icon-32.png">

    <meta name="theme-color" content="#fff">
    <link rel="manifest" href="./manifest.json">

    <style>
      html,
      body {
        height: 100%;
        margin: 0
      }
      body {
        background-color: #FCFCFC;
        color: #212121;
        font-family: "Helvetica Neue", "Calibri Light", Roboto, sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        text-align: center;
        display: flex;
        flex-flow: column;
        font-size: 75%;
        font-size: 2vw;
        letter-spacing: normal;
      }
      .page-header {
        flex: 0 1 auto;
      }
      .page-container {
        flex: 1 1 auto;
      }
      .results,
      .scores {
        display: inline-block;
        border-radius: 4px;
        box-shadow: 0 4px 16px 0 rgba(0,0,0,0.2);
        background-color: #FFF;
        padding: 1em;
      }
      .results th {
        color: hsl( 0, 0%, 46% );
        font-weight: normal;
      }
      .results th,
      .results td {
        padding: 0.5em 2em;
      }
      .scores th,
      .scores td {
        padding: 0.5em 0.5em;
      }
      .scores td {
        -webkit-hyphens: auto;
        -moz-hyphens: auto;
        hyphens: auto;
      }
      .scores th {
        color: hsl( 0, 0%, 46% );
        font-weight: normal;
        text-align: center;
      }
      #twins-{{ lastDigit TwinsTotal }},
      #opponent-{{ lastDigit OpponentTotal }} {
        font-weight: bold;
        color: #212121;
      }
      .o-{{ lastDigit OpponentTotal }} .t-{{ lastDigit TwinsTotal }} {
        background-color: #A5D6A7;
        color: #1B5E20;
      }
      .rotated-text-container {
        max-width: 2em;
      }
      .rotated-text {
        transform: rotate(-90deg) translateY(-2em);
        display: inline-block;
      }
      .column {
        margin-bottom: 2em;
      }
      .nav-arrow {
        color: hsl( 0, 0%, 46% );
        text-decoration: none;
        font-size: 75%;
        margin-left: 1em;
        margin-right: 1em;
      }
      .currentWeek {
        width: 15em;
        display: inline-block;
      }
      h1 {
        font-size: 6vw;
      }
      h3 {
        font-size: 3vw;
      }
      .star {
        height: 1.33em;
        vertical-align: middle;
        display: inline-block;
        margin-right: 0.1em;
      }
      .name {
        vertical-align: middle;
      }
      .notes {
        margin-top: 1em;
        font-size: 75%;
      }
      @media (min-width: 750px) {
        body {
          font-size: 16px;
          letter-spacing: 0.02em;
        }
        h1 {
          font-size: 45px;
        }
        h3 {
          font-size: 22.5px;
        }
      }
      @media (min-width: 1600px) {
        .column {
          flex: 1 1 auto;
        }
        .page-container {
          display: flex;
          flex-flow: column;
          flex-direction:row;
          align-items: center;
        }
      }
    </style>
  </head>
  <body>
    <div class="page-header">
      <h1>Twins Weekly Run Board</h1>
      <h3>
        <a href="./date/{{ prevWeek StartDate }}" class="nav-arrow">◀</a>
        <span class="currentWeek">
          {{ formatDate StartDate weekday="short" day="numeric" month="short" }} - {{ formatDate EndDate weekday="short" day="numeric" month="short" }}
        </span>
        <a href="./date/{{ nextWeek StartDate }}" class="nav-arrow">▶</a>
      </h3>
    </div>
    <div class="page-container">
      <div class="column">
        <table class="results">
          <tr>
            <th>Date</th>
            <th>vs.</th>
            <th>Status</th>
            <th>Twins</th>
            <th>Opponent</th>
          </tr>
          {{#each games}}
          <tr>
            <td>{{ formatDate GameDate weekday="short" day="numeric" month="short" }}</td>
            <td>{{ OpponentName }}</td>
            <td>
              {{#if GameURL }}<a href="http://mlb.com{{ GameURL }}" target="_blank">{{/if}}
              {{ GameStatus }}
              {{#if GameURL }}</a>{{/if}}
            </td>
            <td>{{ TwinsScore }}</td>
            <td>{{ OpponentScore }}</td>
          </tr>
          {{/each}}
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th>{{ TwinsTotal }}</th>
            <th>{{ OpponentTotal }}</th>
          </tr>
        </table>
      </div>

      <div class="column">
        <table class="scores">
          <tr>
            <th></th>
            <th></th>
            <th colspan="10">Twins</th>
          </tr>
          <tr>
            <th></th>
            <th></th>
            <th id="twins-3">3</th><th id="twins-4">4</th>
            <th id="twins-1">1</th><th id="twins-5">5</th>
            <th id="twins-9">9</th><th id="twins-7">7</th>
            <th id="twins-0">0</th><th id="twins-8">8</th>
            <th id="twins-6">6</th><th id="twins-2">2</th>
          </tr>
          <tr class="o-2 o-4">
            <th rowspan="10" class="rotated-text-container"><span class="rotated-text">Opponents</span></th>
            <th id="opponent-2">2</th>
            <td rowspan="2" colspan="2" class="t-3 t-4"><span class="name">Greg Nielsen</span></td>
            <td rowspan="2" colspan="2" class="t-1 t-5"><span class="name">Mark Kaltenbach</span></td>
            <td rowspan="2" colspan="2" class="t-9 t-7"><span class="name">Greg Murray</span></td>
            <td rowspan="2" colspan="2" class="t-0 t-8"><span class="name">Tom Benolkin</span></td>
            <td rowspan="2" colspan="2" class="t-6 t-2"><span class="name">John Edison</span></td>
          </tr>
          <tr>
            <th id="opponent-4">4</th>
          </tr>
          <tr class="o-9 o-5">
            <th id="opponent-9">9</th>
            <td rowspan="2" colspan="2" class="t-3 t-4"><span class="name">Ed Hershberger</span></td>
            <td rowspan="2" colspan="2" class="t-1 t-5"><span class="name">Tom Daly</span></td>
            <td rowspan="2" colspan="2" class="t-9 t-7"><span class="name">Becki Folstrom</span></td>
            <td rowspan="2" colspan="2" class="t-0 t-8"><span class="name">Joe Hamilton</span></td>
            <td rowspan="2" colspan="2" class="t-6 t-2"><span class="name">Mike Austin</span></td>
          </tr>
          <tr>
            <th id="opponent-5">5</th>
          </tr>
          <tr class="o-3 o-8">
            <th id="opponent-3">3</th>
            <td rowspan="2" colspan="2" class="t-3 t-4"><img class="star" src="./images/star-gold.svg"><span class="name">Tim Quinlan</span></td>
            <td rowspan="2" colspan="2" class="t-1 t-5"><span class="name">Chad Sherman</span></td>
            <td rowspan="2" colspan="2" class="t-9 t-7"><img class="star" src="./images/star-gold.svg"><span class="name">Greg Tautges</span></td>
            <td rowspan="2" colspan="2" class="t-0 t-8"><span class="name">DiLo</span></td>
            <td rowspan="2" colspan="2" class="t-6 t-2"><span class="name">Barry Hastings</span></td>
          </tr>
          <tr>
            <th id="opponent-8">8</th>
          </tr>
          <tr class="o-7 o-1">
            <th id="opponent-7">7</th>
            <td rowspan="2" colspan="2" class="t-3 t-4"><img class="star" src="./images/star-gold.svg"><span class="name">Blair Kruschke</span></td>
            <td rowspan="2" colspan="2" class="t-1 t-5"><img class="star" src="./images/star-silver.svg"><span class="name">Dave Jackelen</span></td>
            <td rowspan="2" colspan="2" class="t-9 t-7"><img class="star" src="./images/star-gold.svg"><span class="name">Jim Garbe</span></td>
            <td rowspan="2" colspan="2" class="t-0 t-8"><img class="star" src="./images/star-gold.svg"><span class="name">Jim Mack</span></td>
            <td rowspan="2" colspan="2" class="t-6 t-2"><span class="name">JLC</span></td>
          </tr>
          <tr>
            <th id="opponent-1">1</th>
          </tr>
          <tr class="o-0 o-6">
            <th id="opponent-0">0</th>
            <td rowspan="2" colspan="2" class="t-3 t-4"><span class="name">Travis Tolzein</span></td>
            <td rowspan="2" colspan="2" class="t-1 t-5"><span class="name">Dan Trizulny</span></td>
            <td rowspan="2" colspan="2" class="t-9 t-7"><img class="star" src="./images/star-gold.svg"><span class="name">Paul Pederson</span></td>
            <td rowspan="2" colspan="2" class="t-0 t-8"><img class="star" src="./images/star-gold.svg"><span class="name">Jon Huston</span></td>
            <td rowspan="2" colspan="2" class="t-6 t-2"><span class="name">Dave Malone</span></td>
          </tr>
          <tr>
            <th id="opponent-6">6</th>
          </tr>
        </table>
        <div class="notes">
          <img class="star" src="./images/star-gold.svg"><span class="name">denotes a big shot</span>
          <img class="star" src="./images/star-silver.svg"><span class="name">denotes a friend of the grid</span>
          <img class="star" src="./images/star-bronze.svg"><span class="name">denotes a poser</span>
        </div>
      </div>
    </div>
    
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-43071584-1', 'auto');
      ga('send', 'pageview');

    </script>
  </body>
</html>